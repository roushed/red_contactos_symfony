    <div class="{{ claseMensaje }}">
        <strong>{% if mensaje.nickenvia.id != usuario_actual.id %}{{ mensaje.nickenvia.nick }}{% endif %}</strong>
        <div>{{ mensaje.texto}}</div>
        <br>
    </div>
{% else %}
